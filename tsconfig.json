{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "commonjs",                
    "rootDir": "src",                    
    "outDir": "dist",                    
    "strict": true,                      
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,              
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
